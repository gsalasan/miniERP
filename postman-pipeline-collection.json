                "value": "Bearer {{jwt_token}}"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"projectId\": \"proj-001\",\n  \"newStatus\": \"INVALID_STATUS\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/api/v1/pipeline/move",
              "host": ["{{base_url}}"],
              "path": ["api", "v1", "pipeline", "move"]
            },
            "description": "Test error handling untuk status yang tidak valid"
          },
          "response": []
        },
        {
          "name": "Move - Business Rule Violation",
          "request": {
            "method": "PUT",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Authorization",
                "value": "Bearer {{jwt_token}}"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"projectId\": \"proj-003\",\n  \"newStatus\": \"PROPOSAL_DELIVERED\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/api/v1/pipeline/move",
              "host": ["{{base_url}}"],
              "path": ["api", "v1", "pipeline", "move"]
            },
            "description": "Test business rule: tidak bisa proposal tanpa estimasi approved"
          },
          "response": []
        },
        {
          "name": "Unauthorized Access",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "url": {
              "raw": "{{base_url}}/api/v1/pipeline",
              "host": ["{{base_url}}"],
              "path": ["api", "v1", "pipeline"]
            },
            "description": "Test akses tanpa authorization header"
          },
          "response": []
        }
      ]
    }
  ],
