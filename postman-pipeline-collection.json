{
  "info": {
    "name": "miniERP - CRM Pipeline API",
    "description": "Collection untuk testing Pipeline Management API (Kanban Visual)",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Pipeline Management",
      "item": [
        {
          "name": "Get Pipeline Data",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Authorization",
                "value": "Bearer {{jwt_token}}"
              }
            ],
            "url": {
              "raw": "{{base_url}}/api/v1/pipeline",
              "host": ["{{base_url}}"],
              "path": ["api", "v1", "pipeline"]
            },
            "description": "Mengambil data pipeline yang dikelompokkan berdasarkan status untuk Kanban board"
          },
          "response": []
        },
        {
          "name": "Move Pipeline Card",
          "request": {
            "method": "PUT",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Authorization",
                "value": "Bearer {{jwt_token}}"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"projectId\": \"proj-001\",\n  \"newStatus\": \"MEETING_SCHEDULED\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/api/v1/pipeline/move",
              "host": ["{{base_url}}"],
              "path": ["api", "v1", "pipeline", "move"]
            },
            "description": "Memindahkan kartu project dari satu kolom ke kolom lain di pipeline"
          },
          "response": []
        },
        {
          "name": "Get Project Activities",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Authorization",
                "value": "Bearer {{jwt_token}}"
              }
            ],
            "url": {
              "raw": "{{base_url}}/api/v1/pipeline/activities/{{project_id}}",
              "host": ["{{base_url}}"],
              "path": ["api", "v1", "pipeline", "activities", "{{project_id}}"]
            },
            "description": "Mengambil log aktivitas dari sebuah project untuk audit trail"
          },
          "response": []
        },
        {
          "name": "Create New Project",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Authorization",
                "value": "Bearer {{jwt_token}}"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"project_name\": \"Website E-Commerce\",\n  \"project_number\": \"PRJ-2024-006\",\n  \"description\": \"Pembuatan website e-commerce dengan fitur lengkap\",\n  \"customer_id\": \"cust-001\",\n  \"estimated_value\": 80000000,\n  \"lead_score\": 7,\n  \"priority\": \"MEDIUM\",\n  \"expected_close_date\": \"2024-12-31\",\n  \"notes\": \"Client membutuhkan integrasi payment gateway\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/api/v1/pipeline/projects",
              "host": ["{{base_url}}"],
              "path": ["api", "v1", "pipeline", "projects"]
            },
            "description": "Membuat project baru di pipeline"
          },
          "response": []
        },
        {
          "name": "Update Project",
          "request": {
            "method": "PUT",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Authorization",
                "value": "Bearer {{jwt_token}}"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"estimated_value\": 85000000,\n  \"lead_score\": 8,\n  \"priority\": \"HIGH\",\n  \"notes\": \"Client konfirmasi budget sudah approved\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/api/v1/pipeline/projects/{{project_id}}",
              "host": ["{{base_url}}"],
              "path": ["api", "v1", "pipeline", "projects", "{{project_id}}"]
            },
            "description": "Update data project yang sudah ada"
          },
          "response": []
        }
      ]
    },
    {
      "name": "Error Test Cases",
      "item": [
