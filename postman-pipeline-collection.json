          "name": "Move - Invalid Project ID",
          "request": {
            "method": "PUT",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Authorization",
                "value": "Bearer {{jwt_token}}"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"projectId\": \"invalid-uuid-123\",\n  \"newStatus\": \"MEETING_SCHEDULED\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/api/v1/pipeline/move",
              "host": ["{{base_url}}"],
              "path": ["api", "v1", "pipeline", "move"]
            },
            "description": "Test error handling untuk project ID yang tidak valid"
