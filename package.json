{
  "name": "minierp",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "workspaces": [
    "frontend/apps/*",
    "frontend/shared/*",
    "services/*"
  ],
  "scripts": {
    "dev:identity": "npm --prefix services/identity-service run dev",
    "dev:engineering": "npm --prefix services/engineering-service run dev",
    "dev:frontend": "npm --prefix frontend run dev",
    "build:frontend": "npm --prefix frontend run build",
    "build:services": "npm run build --workspaces --if-present",
    "lint": "npm run lint --workspaces --if-present",
    "lint:fix": "npm run lint --workspaces --if-present",
    "format": "npm run format --workspaces --if-present",
    "format:check": "npm run format:check --workspaces --if-present",
    "type-check": "npm run type-check --workspaces --if-present",
    "install:all": "npm install && npm install --prefix frontend && npm install --prefix services/identity-service"
  },
  "devDependencies": {
    "prisma": "^6.17.1",
    "@eslint/js": "^9.37.0",
    "@typescript-eslint/eslint-plugin": "^8.46.0",
    "@typescript-eslint/parser": "^8.46.0",
    "eslint": "^9.37.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "prettier": "^3.6.2",
    "typescript": "^5.6.3"
  },
  "dependencies": {
    "@prisma/client": "^6.17.1"
  }
}
